<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
        <%= image_tag 'erland.png', id: :icon, alt: 'erland icon' %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: 'fadeIn second form-control', placeholder: :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <br/>
        <%= f.password_field :password, class: 'fadeIn third form-control', placeholder: :password, autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <br/>
          <%= f.check_box :remember_me, class: 'fadeIn third' %>
          <%= f.label :remember_me, class: 'fadeIn third' %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: 'fadeIn fourth btn btn-primary' %>
      </div>
    <% end %>

    <div id="formFooter">
      <div class="fadeIn fourth">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

