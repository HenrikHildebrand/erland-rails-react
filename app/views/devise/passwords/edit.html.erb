<div class="wrapper fadeInDown">
  <div id="formContent">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class: 'form-control', placeholder: "password #{@minimum_password_length  ? @minimum_password_length.to_s + " characters minimum" : ""}", autocomplete: "current-password" %>
      </div>
      <div class="field">
        <br/>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: :password_confirmation, autocomplete: "current-password" %>
      </div>

    <div class="actions">
      <br/>
      <%= f.submit "Change my password" %>
    </div>
  <% end %>

    <div id="formFooter">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>